<html>
    <head>      
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
        <title>Palindrome Exercise</title>

        <!-- CSS  -->
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"><!--Import Google Icon Font-->  
        <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
        <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
        <link rel="stylesheet" type="text/css" href="/css/sweetalert.css">
    </head>
    <body>  
        <nav class="nav-extended grey lighten-4">
            <div class="nav-wrapper container">
                <a href="index.php" class="brand-logo">Palindrome Database</a>
        </nav>
        <div class="container">
        </div>  
        <div id="Create" class="section scrollspy">
            <div class="row container">
                <h2 class="header">Palindrome Check</h2>
                <div class="row">
                    <form class="col s6" action="http://localhost:8080/index/add" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="palindrome-checker" type="text" name="palindrome" required="required" class="validate" value="<%=word%>">
                                <label for="palindrome-checker">Palindrome checker</label>
                            </div>
                        </div>

                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>

                    </form>
                    
                    <div class="row">
                   <a href="http://localhost:8080/index/check" id="check_button" class="waves-effect waves-light btn">View list</a>
                    </div>
                </div>
            </div>
        </div>
        <main></main>
        <!--Import jQuery before materialize.js-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
        <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-git.min.js"></script>  
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script><!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script> 
        <script>
            $(document).ready(function () {
                $(".button-collapse").sideNav();
                $('.scrollspy').scrollSpy();
                var word = decodeHtml('<%=word%>');//Stores attempt
                var palindrome = <%= palindrome%> ; //Stores boolean result 
                if (palindrome && word !== '') {
                    swal("Good job!", word + " is a palindrome!", "success");//alert window
                } else if (!palindrome && word !== '') {
                    swal("Uh-oh!", word + " is not a palindrome!", "error");//alert window
                }

                //Decodes html entities in the alert window.
                function decodeHtml(html) {
                    var txt = document.createElement("textarea");
                    txt.innerHTML = html;
                    return txt.value;
                }

            });
        </script>
    </body>        

</html>
